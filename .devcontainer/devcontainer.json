{
	"name": "Azure Functions & Node.js",
	"image": "mcr.microsoft.com/azure-functions/node:4-node16-core-tools",
	"forwardPorts": [ 7071 ],

	"customizations": {
		"vscode": {
			"extensions": [
				"ms-azuretools.vscode-azurefunctions",
				"dbaeumer.vscode-eslint"
			]
		}
	},
	"mounts": [
      "target=/workspaces/azure-functions-demo/app/node_modules"
	],
	"remoteUser": "node",
	"features": {
		"ghcr.io/devcontainers/features/azure-cli:1": {},
		"ghcr.io/devcontainers/features/git:1": {},
		"ghcr.io/frntn/devcontainers-features/postman:1": {},
		"ghcr.io/devcontainers-contrib/features/typescript:2": {}
	},
	"runArgs": ["--cap-add=NET_ADMIN", "--cap-add=NET_RAW", "--device=/dev/net/tun"],
	"initializeCommand": "bash .devcontainer/save-config.sh",
	"onCreateCommand": "sudo bash .devcontainer/initialize.sh",
	"postStartCommand": "bash .devcontainer/start-vpn.sh"
}
